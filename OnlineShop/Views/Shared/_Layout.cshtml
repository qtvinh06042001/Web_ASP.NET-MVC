<!DOCTYPE HTML>
<head>
    <title>Điện máy Trường Hoa</title>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
    <link href="~/Content/css/style.css" rel="stylesheet" type="text/css" media="all" />
    <link href="~/Content/css/slider.css" rel="stylesheet" type="text/css" media="all" />
    <script type="text/javascript" src="js/jquery-1.7.2.min.js"></script>
    <script type="text/javascript" src="js/move-top.js"></script>
    <script type="text/javascript" src="js/easing.js"></script>
    <script type="text/javascript" src="js/startstop-slider.js"></script>
</head>
<body>
    <div class="wrap">
        <div class="header">
            <div class="headertop_desc">
                <div class="call">
                    <p><span>Cần hỗ trợ?</span> gọi chúng tôi <span class="number">038 203 9666</span></p>
                </div>
                <div class="account_desc">
                    <ul>
                        @{
                            if (Session["idUser"] != null)
                            {
                                if (Session["Admin"] != null)
                                {
                                    <li>Chào mừng @Session["Fullname"]</li>


                                    <li><a href="~/Admin/HomeAdmin/Index">Trang quản trị</a></li>


                                    <li><a href="~/Home/Logout" class="btn btn-warning">Đăng xuất</a></li>
                                }
                                else
                                {
                                    <li>Welcome @Session["Fullname"]</li>
                                    <li><a href="~/Home/Logout" class="btn btn-warning">Đăng xuất</a></li>
                                }



                            }
                            else
                            {
                                <li><a href="~/Home/Register">Đăng kí</a></li>
                                <li><a href="~/Home/Login">Đăng nhập</a></li>
                            }
                        }
                    </ul>
                </div>
                <div class="clear"></div>
            </div>
            <div class="header_top">
                <div class="logo">
                    <a href="~/Home/Index"><img src="~/Content/images/truonghoa.png" alt="" /></a>
                </div>
                <div class="cart">
                    <p>
                        Điện máy Trường Hoa! <a href="@Url.Action("Index", "Cart" )" ><img style="width:8%" src="~/Content/images/cart.jpg" />:  </a>
                            @Session["count"] sản phẩm
                            
                        
                    </p>
                </div>
                <script type="text/javascript">
                    function DropDown(el) {
                        this.dd = el;
                        this.initEvents();
                    }
                    DropDown.prototype = {
                        initEvents: function () {
                            var obj = this;

                            obj.dd.on('click', function (event) {
                                $(this).toggleClass('active');
                                event.stopPropagation();
                            });
                        }
                    }

                    $(function () {

                        var dd = new DropDown($('#dd'));

                        $(document).click(function () {
                            // all dropdowns
                            $('.wrapper-dropdown-2').removeClass('active');
                        });

                    });

                </script>
                <div class="clear"></div>
            </div>
            <div class="header_bottom">
                <div class="menu">
                    <ul>
                        <li class="active">
                            <a href="~/Home/Index">Trang chủ</a></li>
                        <li><a href="~/About/Index">Thông tin</a></li>
                        <li><a href="~/News/Index">Tin tức</a></li>
                        <li><a href="~/Contact/Index">Liên hệ</a></li>
                        
                    </ul>
                </div>
                <div class="search_box">
                    <form>
                        <input type="text" value="Search" onfocus="this.value = '';" onblur="if (this.value == '') {this.value = 'Search';}"><input type="submit" value="">
                    </form>
                </div>
                <div class="clear"></div>
            </div>
            
        </div>
        @RenderBody()
        <div class="main">
            
        </div>
    </div>
    <div class="footer">
        <div class="wrap">
            <div class="section group">
                <div class="col_1_of_4 span_1_of_4">
                    <h4>Thông tin</h4>
                    <ul>
                        <li><a href="~/About/Index">Trường Hoa</a></li>
                        <li><a href="~/Contact/Index">Chăm sóc khách hàng</a></li>

                        <li><a href="~/Contact/Index">Liên hệ</a></li>
                    </ul>
                </div>
                <div class="col_1_of_4 span_1_of_4">
                    <h4>Tại sao nên mua?</h4>
                    <ul>
                        <li><a href="~/About/Index">Thông tin về chúng tôi</a></li>
                        <li><a href="~/Contact/Index">Dịch vụ chăm sóc khách hàng</a></li>
           
                        <li><a href="~/Contact/Index">Bản đồ</a></li>
                        
                    </ul>
                </div>
                <div class="col_1_of_4 span_1_of_4">
                    <h4>Tài khoản</h4>
                    <ul>
                        <li><a href="~/Home/Login">Đăng nhập</a></li>
                        <li><a href="~/Cart/Index">Giỏ hàng</a></li>
                        <li><a href="~/Contact/Index">Trợ giúp</a></li>
                    </ul>
                </div>
                <div class="col_1_of_4 span_1_of_4">
                    <h4>Lien hệ</h4>
                    <ul>
                        <li><span>0204388015</span></li>
                        <li><span>038 203 9666</span></li>
                        
                    </ul>
                    <div class="social-icons">
                        <h4>Theo dõi</h4>
                        <ul>
                            <li><a href="https://www.facebook.com/profile.php?id=100083009238439" target="_blank"><img src="~/Content/images/facebook.png" alt="" /></a></li>
                            
                            
                        </ul>
                    </div>
                </div>
            </div>
        </div>
        <div class="copy_right">
            <p> Cửa hàng điện máy Trường Hoa</p>
        </div>
    </div>
    <script type="text/javascript">
        $(document).ready(function () {
            $().UItoTop({ easingType: 'easeOutQuart' });

        });
    </script>
    <a href="#" id="toTop"><span id="toTopHover"> </span></a>
</body>


